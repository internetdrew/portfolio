---
import { getCollection, render } from "astro:content";
import { slugify } from "../../utils";
import HelloLayout from "@/layouts/HelloLayout.astro";

export async function getStaticPaths() {
  const hellos = await getCollection("hellos");
  return hellos.map((entry) => ({
    params: { slug: slugify(entry.data.companyName) },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<HelloLayout frontmatter={entry.data}>
  <Content />
</HelloLayout>
